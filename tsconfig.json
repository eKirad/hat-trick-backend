{
    "compilerOptions": {
      "module": "commonjs",
      "esModuleInterop": true,
      "target": "es6",
      "moduleResolution": "node",
      "experimentalDecorators": true,
      "emitDecoratorMetadata": true,
      "sourceMap": true,
      "resolveJsonModule": true,
      "outDir": "dist",
      "typeRoots": [
        "node_modules/@types",  "./typings"
      ]
    },
    "include": [
      "src/**/*", 
      "src/**/*.json"
    ],
    "lib": ["es2015"]
  }